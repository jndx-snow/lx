<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#00a6ac"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_three_line"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/left_three"
            android:scaleType="fitXY"/>

        <ImageButton
            android:id="@+id/head_middle"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/search" />
        <ImageButton
            android:id="@+id/btn_title"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00a6ac" >

        <RadioGroup
            android:id="@+id/radioGroup_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#00a6ac"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radiobutton_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:text="患者列表"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radiobutton_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:text="当班护士"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </RadioGroup>
</RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_red_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff4157"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff4157"
            android:orientation="horizontal" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1">
        </FrameLayout>
        <ImageView
            android:id="@+id/letter"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/letter"
            android:visibility="gone"/>
    </RelativeLayout>


        <!--搜索-->
    <RelativeLayout
        android:id="@+id/rl_list"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵薇薇"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="#d3d3d3"
                android:textSize="22sp"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
               android:background="@drawable/delete"
                android:layout_marginLeft="170dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#d3d3d3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/ll_first" />
        <!--android:layout_marginLeft="70dp"-->

        <LinearLayout
            android:id="@+id/ll_send"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/ll_first">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="林心如"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="#d3d3d3"
                android:textSize="22sp"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/delete"
                android:layout_marginLeft="170dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#d3d3d3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/ll_send" />
        <!--android:layout_marginLeft="70dp"-->
        <LinearLayout
            android:id="@+id/ll_third"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/ll_send">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李小璐"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="#d3d3d3"
                android:textSize="22sp"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/delete"
                android:layout_marginLeft="170dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#d3d3d3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/ll_third" />
       <!-- android:layout_marginLeft="70dp"-->
      <!--  android:layout_width="350dp"-->

    </RelativeLayout>

</LinearLayout>