<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    <!--<include
        android:layout_width="match_parent"
        android:layout_height="120dp"
        layout="@layout/activity_head" />-->

    <!-- 按键标题 -->
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="#ffffff">
         <ImageButton
             android:id="@+id/temperature"
             android:layout_marginLeft="30dp"
             android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/temeputrue_selected"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"/>
        <ImageButton
            android:id="@+id/heart_rate"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/heart_rate_unselected"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"/>
        <ImageButton
            android:id="@+id/pulse"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/pulse_rate_unselected"/>
    </LinearLayout>
    <!--下划线-->
    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="95dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"/>
    <!--标题-->
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/ll_line"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <!--脉搏-->
            <LinearLayout
                android:id="@+id/ll_plus"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="脉搏：bmp"
                    android:textSize="16sp"
                    android:textColor="#757575"/>
                <TextView
                    android:id="@+id/tv_plus_color"
                    android:layout_width="40dp"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="#f34985"/>
            </LinearLayout>
            <!--心率-->
            <LinearLayout
                android:id="@+id/ll_rate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="心率：bmp"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="温度："
                        android:textSize="16sp"
                        android:textColor="#757575"/>
                <TextView
                    android:id="@+id/tv_rate_color"
                    android:layout_width="40dp"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="#00a6ac"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--显示心率-->
<!--            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="150dp">-->
                <CheckBox
                    android:id="@+id/select_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="2dp"
                    android:checked="false"
                    android:text="显示心率"
                    android:textSize="18sp"
                    android:textColor="#757575"
                     android:visibility="gone" />
<!--
                <TextView
                    android:id="@+id/advice_left_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="显示心率"
                    android:textSize="22sp"
                    android:textColor="#757575"
                    android:visibility="gone"/>-->
          <!--  </LinearLayout>-->
            <!--选择按钮-->
           <!-- <ImageButton
                android:id="@+id/select_data"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/today"/>-->


            <Spinner
                android:id="@+id/select_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:entries="@array/spanner"
                android:background="@drawable/bg"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_title">
            <ImageView
                android:id="@+id/image_axis"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tempeture_axis"/>
            <!--显示图片-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:scrollbars="horizontal">
                <ImageView
                    android:id="@+id/body_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/temperature_data" />
            </HorizontalScrollView>
        </RelativeLayout>
</RelativeLayout>